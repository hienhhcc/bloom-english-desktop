{
  "name": "bloom-english-desktop",
  "version": "1.0.0",
  "description": "A desktop vocabulary learning app for English learners",
  "author": "Bloom English",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "build": "next build",
    "electron:dev": "next build && electron .",
    "dist": "next build && electron-builder",
    "update": "node scripts/build-and-update.js",
    "update:no-launch": "node scripts/build-and-update.js --no-launch",
    "dist:install": "next build && electron-builder && .\\\"dist\\Bloom English Setup 1.0.0.exe\""
  },
  "dependencies": {
    "@heyputer/puter.js": "^2.2.10",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-serve": "^2.1.1",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.4.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "electron": "^35.0.0",
    "electron-builder": "^26.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.bloom-english.desktop",
    "productName": "Bloom English",
    "files": [
      "electron/**/*",
      "out/**/*",
      "node_modules/electron-serve/**/*"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.education",
      "icon": "app-icon/app-icon.png"
    },
    "win": {
      "target": "nsis"
    }
  }
}
